<Window
	x:Class="AnzuW.MainWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	Title="Anzu"
	Width="800"
	Height="500"
	Background="White"
	Icon="Resources/img/icon.png"
	ResizeMode="NoResize"
	WindowStyle="None"
	mc:Ignorable="d">
	<Window.Resources>
		<Style x:Key="FocusVisual">
			<Setter Property="Control.Template">
				<Setter.Value>
					<ControlTemplate>
						<Rectangle
							Margin="2"
							SnapsToDevicePixels="true"
							Stroke="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"
							StrokeDashArray="1 2"
							StrokeThickness="1" />
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>
		<SolidColorBrush x:Key="Button.Static.Background" Color="#FFDDDDDD" />
		<SolidColorBrush x:Key="Button.Static.Border" Color="#FF707070" />
		<SolidColorBrush x:Key="Button.MouseOver.Background" Color="#FFBEE6FD" />
		<SolidColorBrush x:Key="Button.MouseOver.Border" Color="#FF3C7FB1" />
		<SolidColorBrush x:Key="Button.Pressed.Background" Color="#FFC4E5F6" />
		<SolidColorBrush x:Key="Button.Pressed.Border" Color="#FF2C628B" />
		<SolidColorBrush x:Key="Button.Disabled.Background" Color="#FFF4F4F4" />
		<SolidColorBrush x:Key="Button.Disabled.Border" Color="#FFADB2B5" />
		<SolidColorBrush x:Key="Button.Disabled.Foreground" Color="#FF838383" />
		<Style TargetType="{x:Type Button}">
			<Setter Property="FocusVisualStyle" Value="{StaticResource FocusVisual}" />
			<Setter Property="Background" Value="{StaticResource Button.Static.Background}" />
			<Setter Property="BorderBrush" Value="{StaticResource Button.Static.Border}" />
			<Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}" />
			<Setter Property="BorderThickness" Value="1" />
			<Setter Property="HorizontalContentAlignment" Value="Center" />
			<Setter Property="VerticalContentAlignment" Value="Center" />
			<Setter Property="Padding" Value="1" />
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="{x:Type Button}">
						<Border
							x:Name="border"
							Background="{TemplateBinding Background}"
							BorderBrush="{TemplateBinding BorderBrush}"
							BorderThickness="{TemplateBinding BorderThickness}"
							SnapsToDevicePixels="true">
							<ContentPresenter
								x:Name="contentPresenter"
								Margin="{TemplateBinding Padding}"
								HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
								VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
								Focusable="False"
								RecognizesAccessKey="True"
								SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
						</Border>
						<ControlTemplate.Triggers>
							<Trigger Property="IsDefaulted" Value="true">
								<Setter TargetName="border" Property="BorderBrush" Value="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}" />
							</Trigger>
							<Trigger Property="IsMouseOver" Value="true">
								<Setter TargetName="border" Property="Background" Value="#FF111215" />
								<Setter TargetName="border" Property="BorderBrush" Value="{StaticResource Button.MouseOver.Border}" />
							</Trigger>
							<Trigger Property="IsPressed" Value="true">
								<Setter TargetName="border" Property="Background" Value="#FF191A1D" />
								<Setter TargetName="border" Property="BorderBrush" Value="{StaticResource Button.Pressed.Border}" />
							</Trigger>
							<Trigger Property="IsEnabled" Value="false">
								<Setter TargetName="border" Property="Background" Value="{StaticResource Button.Disabled.Background}" />
								<Setter TargetName="border" Property="BorderBrush" Value="{StaticResource Button.Disabled.Border}" />
								<Setter TargetName="contentPresenter" Property="TextElement.Foreground" Value="{StaticResource Button.Disabled.Foreground}" />
							</Trigger>
						</ControlTemplate.Triggers>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>
	</Window.Resources>
	<!--  ==============================================================  -->
	<Grid>
		<!--  ==============================================================  -->
		<!--  ==========================Button Side============================  -->
		<Grid>
			<!--  btnSide  -->
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="99*" />
				<ColumnDefinition Width="301*" />
			</Grid.ColumnDefinitions>

			<Border Background="#FF2F3640" />

			<StackPanel
				Grid.Row="1"
				Width="196"
				Height="436"
				Margin="0,-5"
				VerticalAlignment="Bottom">

				<Button
					Height="50"
					Margin="0,4"
					Background="#FF17191D"
					BorderBrush="#FF17191D"
					Click="Button_Click_Desktop"
					Content="Desktop"
					FontFamily="Microsoft YaHei UI Light"
					FontSize="24"
					Foreground="White" />

				<Button
					Height="50"
					Margin="0,4"
					Background="#FF17191D"
					BorderBrush="#FF17191D"
					Content="Sub"
					FontFamily="Microsoft YaHei UI Light"
					FontSize="24"
					Foreground="White" />

				<Button
					Height="50"
					Margin="0,4"
					Background="#FF17191D"
					BorderBrush="#FF17191D"
					Content="File"
					FontFamily="Microsoft YaHei UI Light"
					FontSize="24"
					Foreground="White" />

				<Button
					Height="50"
					Margin="0,4"
					Background="#FF17191D"
					BorderBrush="#FF17191D"
					Content="Folder"
					FontFamily="Microsoft YaHei UI Light"
					FontSize="24"
					Foreground="White" />

				<Button
					Height="50"
					Margin="0,4"
					Background="#FF17191D"
					BorderBrush="#FF17191D"
					Content="Other"
					FontFamily="Microsoft YaHei UI Light"
					FontSize="24"
					Foreground="White" />

				<Button
					Height="50"
					Margin="0,4"
					Background="#FF17191D"
					BorderBrush="#FF17191D"
					Click="Button_Click_Setting"
					Content="Setting"
					FontFamily="Microsoft YaHei UI Light"
					FontSize="24"
					Foreground="White" />
			</StackPanel>
		</Grid>
		<!--  ==========================/Button Side============================  -->

		<!--  ==========================HEDER============================  -->
		<Grid MouseLeftButtonDown="Window_MouseLeftButtonDown">
			<!--  HEDER  -->
			<Grid.RowDefinitions>
				<RowDefinition Height="16*" />
				<RowDefinition Height="109*" />
			</Grid.RowDefinitions>
			<Border Background="#FF1B1E23" />
			<Label
				HorizontalAlignment="Center"
				VerticalAlignment="Center"
				Content="Anzu"
				FontFamily="Segoe UI Light"
				FontSize="34"
				Foreground="White" />

			<Button
				Name="CloseButton"
				Width="32"
				Height="32"
				Margin="0,5,5,0"
				HorizontalAlignment="Right"
				VerticalAlignment="Top"
				Background="#FF26334F"
				BorderBrush="#FF26334F"
				Click="Exit"
				Content="x"
				FontFamily="Consolas"
				FontSize="22"
				Foreground="White" />
		</Grid>
		<!--  ==========================/HEDER============================  -->

		<!--  ============================================================  -->
		<!--  ============================================================  -->
		<!--  =========================== CONTEXT ========================  -->
		<!--  ============================================================  -->

		<Grid>
			<!--  CONTEXT  -->
			<Grid.RowDefinitions>
				<RowDefinition Height="16*" />
				<RowDefinition Height="109*" />
			</Grid.RowDefinitions>

			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="99*" />
				<ColumnDefinition Width="301*" />
			</Grid.ColumnDefinitions>

			<!--  ============================SETTING============================  -->

			<Grid
				x:Name="SettingGrid"
				Grid.Row="1"
				Grid.Column="1"
				Visibility="Collapsed">
				<!--  Visibility="Collapsed"  -->

				<!--  SETTING  -->

				<Label
					Width="179"
					Margin="20,14,403,0"
					HorizontalAlignment="Center"
					VerticalAlignment="Top"
					Content="Main backup folder:"
					FontFamily="Candara Light"
					FontSize="18" />

				<TextBox
					x:Name="MainBackupFolderTextBox"
					Width="424"
					Height="28"
					Margin="20,51,158,0"
					HorizontalAlignment="Center"
					VerticalAlignment="Top"
					Background="#FFCDCDCD"
					FontSize="18"
					IsEnabled="False"
					Text="Folder..."
					TextWrapping="NoWrap" />
				<Border
					Width="582"
					Height="93"
					Margin="10,10,0,0"
					HorizontalAlignment="Left"
					VerticalAlignment="Top"
					Background="Transparent"
					BorderBrush="#FF383838"
					BorderThickness="1">
					<Border.ToolTip>This is a test tooltip! Woohoo!</Border.ToolTip>
				</Border>
				<Button
					Width="113"
					Height="28"
					Margin="457,51,0,0"
					HorizontalAlignment="Left"
					VerticalAlignment="Top"
					Click="Button_Click_SelectMainBackupFolder"
					Content="Select folder"
					FontFamily="Candara"
					FontSize="18"
					Foreground="#FF4B4A4A"
					Style="{StaticResource ButtonContext}" />
			</Grid>
			<!--  ============================/SETTING============================  -->

			<!--  ============================DesktopGrid============================  -->
			<Grid
				x:Name="DesktopGrid"
				Grid.Row="1"
				Grid.Column="1">
				<!--  Visibility="Collapsed"  -->

				<!--  Desktop  -->

				<Label
					Width="178"
					Margin="15,13,409,0"
					HorizontalAlignment="Center"
					VerticalAlignment="Top"
					Content="Desktop backup"
					FontFamily="Candara Light"
					FontSize="25" />
				<Border
					Width="582"
					Height="77"
					Margin="10,10,0,0"
					HorizontalAlignment="Left"
					VerticalAlignment="Top"
					Background="Transparent"
					BorderBrush="#FF383838"
					BorderThickness="1">
					<Border.ToolTip>All files and folders from the desktop will be added to the archive placed in the main backup folder and after that all files from the desktop will be deleted.</Border.ToolTip>
					<Label Margin="349,-1,-1,50" Content="*After backup, the desktop will be cleared" />
				</Border>
				<Button
					Width="100"
					Height="36"
					Margin="482,42,0,0"
					HorizontalAlignment="Left"
					VerticalAlignment="Top"
					Background="#FF17191D"
					BorderBrush="White"
					Click="Button_Click_DesktopBackup"
					Content="Backup"
					FontFamily="Candara Light"
					FontSize="20"
					Foreground="White" />
			</Grid>
			<!--  ============================/DesktopGrid============================  -->

			<!--  ============================ProgressPanel============================  -->
			<Grid
				x:Name="ProgressPanel"
				Grid.Row="1"
				Grid.Column="1"
				x:FieldModifier="public"
				Visibility="Collapsed">

				<Border
					Width="602"
					Height="157"
					Margin="0,279,0,0"
					HorizontalAlignment="Center"
					VerticalAlignment="Center"
					Background="#FF282E36"
					BorderBrush="#FF282E36"
					BorderThickness="1"
					Opacity="0.6" />

				<Border
					Width="602"
					Height="436"
					HorizontalAlignment="Center"
					VerticalAlignment="Center"
					Background="#FF282E36"
					BorderBrush="#FF282E36"
					BorderThickness="1"
					Opacity="0.6" />

				<Label
					Width="140"
					Height="43"
					Margin="0,279,0,0"
					HorizontalAlignment="Center"
					VerticalAlignment="Top"
					Content="Please, wait"
					FontFamily="Candara Light"
					FontSize="24"
					Foreground="White" />
				<ProgressBar
					x:Name="ProgressBar"
					Width="550"
					Height="23"
					Margin="28,362,0,0"
					HorizontalAlignment="Left"
					VerticalAlignment="Top"
					x:FieldModifier="public"
					Opacity="0.65" />

				<Button
					x:Name="ProgressStopbtn"
					Width="100"
					Height="36"
					Margin="478,390,0,0"
					HorizontalAlignment="Left"
					VerticalAlignment="Top"
					Background="#FF17191D"
					BorderBrush="#FF17191D"
					Click="Button_Click_StopOtherThread"
					Content="Stop"
					FontFamily="Candara Light"
					FontSize="24"
					Foreground="White" />
				<Label
					x:Name="ProgressText"
					Width="550"
					Margin="28,331,24,0"
					HorizontalAlignment="Center"
					VerticalAlignment="Top"
					Content="Copy 2/50..."
					FontFamily="Candara Light"
					FontSize="17"
					Foreground="White" />
				<!--  Visibility="Collapsed"  -->
				<!--  ProgressPanel  -->
			</Grid>
			<!--  ============================/ProgressPanel============================  -->
		</Grid>
		<!--  =========================== /CONTEXT ========================  -->
	</Grid>
</Window>